<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0" metadata-complete="true">

	<display-name>cip-kpi</display-name>
	<description>Carrier Integration related KPIs and Metrics</description>

	<context-param>
		<param-name>spring.profiles.active</param-name>
		<param-value>prod-jpa</param-value>
	</context-param>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<!-- <param-value>classpath:spring/core-config.xml</param-value> -->
		<param-value>classpath:spring/core-config-jdbc.xml</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<filter>
		<filter-name>jersey-serlvet</filter-name>
		<filter-class>org.glassfish.jersey.servlet.ServletContainer</filter-class>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>com.cts.cip.kpi.resources.RESTApplication</param-value>
		</init-param>
	    <init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>io.swagger.jaxrs.listing</param-value>
		</init-param>
		<init-param>
		  <param-name>jersey.config.servlet.filter.staticContentRegex</param-name>
		  <param-value>/.*html|/(html|css|images|js|fonts|lang|lib)/.*|.*(css|js|ttf|gif|png|ico|js)</param-value>
		</init-param>		
	</filter>
	
	<filter-mapping>
		<filter-name>jersey-serlvet</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	

	<welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>